{
  "name": "prisma-query-tools",
  "version": "1.1.5",
  "description": "Tools for working with Prisma queries in Backend and Frontend",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build:esm": "tsc --project tsconfig.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build": "npm run build:esm && npm run build:cjs",
    "example": "node example-runner.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run test && npm run build",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spaceark7/prisma-query-tools.git"
  },
  "bugs": {
    "url": "https://github.com/spaceark7/prisma-query-tools/issues"
  },
  "homepage": "https://github.com/spaceark7/prisma-query-tools#readme",
  "keywords": [
    "prisma",
    "query",
    "filter",
    "pagination",
    "sort",
    "query-string",
    "url-params"
  ],
  "author": "Hasbi Assidiki",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/yup": "^0.32.0",
    "@vitest/coverage-v8": "^3.2.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "yup": "^1.7.0"
  }
}
